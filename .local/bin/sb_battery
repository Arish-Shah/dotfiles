#!/bin/sh

path=/sys/class/power_supply/BAT0

status="$(cat $path/status)"
capacity="$(cat $path/capacity)"

if [ "$capacity" -le 15 ] && [ "$status" = "Discharging" ]; then
    dunstify -a "battery" -r 9995 "battery low" -u critical
fi

case "$status" in
    "Charging"|"Unknown") 
        icon=
        ;;
    *)
        if [ "$capacity" -le 10 ]; then
            icon=""
        elif [ "$capacity" -le 35 ]; then
            icon=""
        elif [ "$capacity" -le 60 ]; then
            icon=""	
        elif [ "$capacity" -le 85 ]; then
            icon=""	
        else
            icon=""
        fi
        ;;
esac

echo "$icon  $capacity%"

